{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "importOrder": [
    "^react",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^@/components",
    "^@/lib",
    "^@/hooks",
    "^@/styles",
    "^@/",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
